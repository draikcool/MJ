<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/toolbarColor"/>
    <TextView
        android:text="更改学期"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"/>

    <TextView
        android:text="2014-2015 学年"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/kebiao_semester_change_1"
            android:text="@string/kebiao_semester_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_select_state"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/kebiao_semester_change_2"
            android:text="@string/kebiao_semester_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_select_state"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
        android:text="2015-2016 学年"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/kebiao_semester_change_3"
            android:text="@string/kebiao_semester_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_select_state"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/kebiao_semester_change_4"
            android:text="@string/kebiao_semester_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_select_state"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
        android:text="2016-2017 学年"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/kebiao_semester_change_5"
            android:text="@string/kebiao_semester_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_select_state"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/kebiao_semester_change_6"
            android:text="@string/kebiao_semester_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_select_state"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <TextView
        android:text="2017-2018 学年"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/kebiao_semester_change_7"
            android:text="@string/kebiao_semester_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_select_state"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/kebiao_semester_change_8"
            android:text="@string/kebiao_semester_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_select_state"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <TextView
        android:text="2018-2019 学年"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/kebiao_semester_change_9"
            android:text="@string/kebiao_semester_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_select_state"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/kebiao_semester_change_10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/kebiao_semester_change_ok"
            android:text="确定"
            android:textColor="@color/toolbarColor"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/kebiao_semester_change_cancel"
            android:text="取消"
            android:textColor="@color/toolbarColor"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>